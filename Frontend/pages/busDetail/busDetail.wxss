/* pages/busDetail/busDetail.wxss */
.container {
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.line-info {
  margin-bottom: 10px;
}

.line-info text {
  display: block;
  margin-bottom: 5px;
  font-size: 16px;
}

.line-name {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.map {
  width: 100%;
  height: 300px;
}

.station-list {
  margin-top: 10px;
}

.station-list .title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.station-item {
  padding: 5px 0;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bus-status {
  color: #ff0000;
  font-size: 14px;
}

.bus-passed {
  color: #999999;
  font-size: 14px;
}
